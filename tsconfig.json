{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    // project options
    "allowJs": true,
    "checkJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": false,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "Node"
  }
}
